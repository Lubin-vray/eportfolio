        {% block stylesheets %}
        {% endblock %}


    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Eportfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                    <a class="nav-link {% if app.request.pathinfo == '/' %}active{% endif %}" href="/">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.pathinfo == '/loisirs' %}active{% endif %}" href="/loisirs">Loisirs et Activités</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="competencesDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Compétences
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="competencesDropdown">
                            <li><a class="dropdown-item" href="/competences#Administrer">Administrer</a></li>
                            <li><a class="dropdown-item" href="/competences#Connecter">Connecter</a></li>
                            <li><a class="dropdown-item" href="/competences#Programmer">Programmer</a></li>
                            <li><a class="dropdown-item" href="/competences#Projets">Projet</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.pathinfo == '/contact' %}active{% endif %}" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.pathinfo == '/page-CV' %}active{% endif %}" href="/page-CV">CV</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <button class="btn btn-secondary my-2 my-sm-0" id="switch" type="button">
                </form>
            </div>
        </div>
        </nav>
        {% block body %}
        {% endblock %}
        <footer class="mt-auto">
            <div class="container">
                <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>About Us</h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam ac ante mollis quam tristique convallis.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                    <small>&copy; 2025 MonSite. Tous droits réservés.</small><br>
                    <small>Adresse : 123 Rue Exemple, 42000 Saint‑Étienne, France</small><br>
                    <small>Email : contact@monsite.fr | Téléphone : 04 00 00 00 00</small>
                    <li><a href="#" class="text-decoration-none text-white">Home</a></li>
                    <li><a href="#" class="text-decoration-none text-white">Services</a></li>
                    <li><a href="#" class="text-decoration-none text-white">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Follow Us</h5>
                    <ul class="list-inline social-icons">
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-facebook"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-twitter"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-instagram"></i></a></li>
                    </ul>
                </div>
                </div>
                <hr class="mb-4">
                <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; 2023 Your Company. All rights reserved.</p>
                </div>
                </div>
            </div>
        </footer>
                        
    <script>
        const style1 = "{{ asset('css/style.css') }}";
        const style2 = "{{ asset('css/bootstrap.css') }}"; // ou ton autre fichier

        const bouton = document.getElementById("switch");
        const lienCSS = document.getElementById("theme");

        // Si tu veux garder le choix après reload, récupère depuis localStorage
        const saved = localStorage.getItem('themeHref');
        if (saved) {
            lienCSS.setAttribute('href', saved);
        }

        bouton.addEventListener("click", () => {
            const current = lienCSS.getAttribute("href");
            if (current === style1) {
            lienCSS.setAttribute("href", style2);
            localStorage.setItem('themeHref', style2);
            } else {
            lienCSS.setAttribute("href", style1);
            localStorage.setItem('themeHref', style1);
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    </body>
</html>
