<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Eportfolio{% endblock %}</title>
        <link id="theme" rel="stylesheet" href="{{ asset('css/style.css')}}">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}


    </head>
    <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light" id="mainNavbar" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Eportfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                    <a class="nav-link {% if app.request.pathinfo == '/' %}active{% endif %}" href="/">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.pathinfo == '/loisirs' %}active{% endif %}" href="/loisirs">Loisirs et Activités</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="competencesDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Compétences
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="competencesDropdown">
                            <li><a class="dropdown-item" href="/competences#Administrer">Administrer</a></li>
                            <li><a class="dropdown-item" href="/competences#Connecter">Connecter</a></li>
                            <li><a class="dropdown-item" href="/competences#Programmer">Programmer</a></li>
                            <li><a class="dropdown-item" href="/competences#Projets">Projet</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.pathinfo == '/contact' %}active{% endif %}" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.pathinfo == '/page-CV' %}active{% endif %}" href="/page-CV">CV</a>
                    </li>
                </ul>
                <form class="d-flex align-items-center">
                        <label class="theme-switch">
                            <input type="checkbox" id="switch">
                            <span class="slider"></span>
                        </label>
                </form>
            </div>
        </div>
        </nav>
        {% block body %}
        {% endblock %}
        <footer class="mt-auto">
            <div class="container">
                <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>About Us</h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam ac ante mollis quam tristique convallis.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                    <small>&copy; 2025 MonSite. Tous droits réservés.</small><br>
                    <small>Adresse : 123 Rue Exemple, 42000 Saint‑Étienne, France</small><br>
                    <small>Email : contact@monsite.fr | Téléphone : 04 00 00 00 00</small>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Follow Us</h5>
                    <ul class="list-inline social-icons">
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-facebook"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-twitter"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="text-white"><i class="bi bi-instagram"></i></a></li>
                    </ul>
                </div>
                </div>
                <hr class="mb-4">
                <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; 2023 Your Company. All rights reserved.</p>
                </div>
                </div>
            </div>
        </footer>
                        
    <script>
    const themeSwitch = document.getElementById("switch");
    const navbar = document.getElementById("mainNavbar");

    function applyTheme(theme) {
        // Applique le thème sur tout le site
        document.documentElement.setAttribute("data-bs-theme", theme);

        // Applique aussi le thème directement sur la navbar
        navbar.setAttribute("data-bs-theme", theme);

        if (theme === "dark") {
            navbar.classList.remove("navbar-light", "bg-light");
            navbar.classList.add("navbar-dark", "bg-dark");
            themeSwitch.checked = true;
        } else {
            navbar.classList.remove("navbar-dark", "bg-dark");
            navbar.classList.add("navbar-light", "bg-light");
            themeSwitch.checked = false;
        }
    }

    themeSwitch.addEventListener("change", () => {
        const current = document.documentElement.getAttribute("data-bs-theme");
        const newTheme = current === "light" ? "dark" : "light";
        applyTheme(newTheme);
        localStorage.setItem("theme", newTheme);
    });

    // Restaure le thème enregistré
    const savedTheme = localStorage.getItem("theme") || "light";
    applyTheme(savedTheme);
    </script>

    <script src="https://cdn.j  sdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>
